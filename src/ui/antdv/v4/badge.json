{
  "name": "ABadge",
  "props": {
    "color": {
      "value": "",
      "description": "自定义小圆点的颜色",
      "default": "-",
      "type": "string"
    },
    "count": {
      "value": "",
      "description": "展示的数字，大于 overflowCount 时显示为 `${overflowCount}+`，为 0 时隐藏",
      "default": "",
      "type": "number | string | slot"
    },
    "dot": {
      "value": "",
      "description": "不展示数字，只有一个小红点",
      "default": "false",
      "type": "boolean"
    },
    "numberStyle": {
      "value": "",
      "description": "设置状态点的样式",
      "default": "''",
      "type": "object"
    },
    "offset": {
      "value": "",
      "description": "设置状态点的位置偏移，格式为 [x, y]",
      "default": "-",
      "type": "[number|string, number|string]"
    },
    "overflowCount": {
      "value": "",
      "description": "展示封顶的数字值",
      "default": "99",
      "type": "number"
    },
    "showZero": {
      "value": "",
      "description": "当数值为 0 时，是否展示 Badge",
      "default": "false",
      "type": "boolean"
    },
    "status": {
      "value": "",
      "description": "设置 Badge 为状态点",
      "default": "''",
      "type": "Enum{ 'success', 'processing, 'default', 'error', 'warning' }"
    },
    "text": {
      "value": "",
      "description": "在设置了 `status` 的前提下有效，设置状态点的文本",
      "default": "''",
      "type": "string"
    },
    "title": {
      "value": "",
      "description": "设置鼠标放在状态点上时显示的文字",
      "default": "`count`",
      "type": "string"
    }
  },
  "methods": [],
  "events": [],
  "link": "https://antdv.com/components/badge-cn"
}
